<%= search_form_for @q, url: search_rooms_path, class: "w-50 mx-auto my-5 py-5" do |f| %>
  <%= f.search_field :address_cont, placeholder:"エリア名を入力", class: "form-control" %>
  <br>
  <%= f.submit '検索', class:"btn btn-primary w-100" %>
<% end %>

<h1 class="text-center my-3">おすすめのエリア</h1>
<div class="row">
  <div class="col-3">
    <%= link_to image_tag("tokyo.jpeg", class:"img-fluid"), search_rooms_path(q: {address_cont: "東京" })%>
    <h3 class="text-center mt-2">東京</h3>
  </div>
  <div class="col-3">
    <%= link_to image_tag("osaka.jpeg", class:"img-fluid"), search_rooms_path(q: {address_cont: "大阪" })%>
