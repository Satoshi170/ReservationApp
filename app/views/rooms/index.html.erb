<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th>Address</th>
      <th>作成日</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.image %></td>
        <td><%= link_to "#{room.name}", room %></td>
        <td><%= room.content %></td>
        <td><%= room.price %></td>
        <td><%= room.address %></td>
        <td><%= room.created_at %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

