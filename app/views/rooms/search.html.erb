<%= search_form_for @q, url: search_rooms_path, class: "d-flex w-50 mx-auto py-4" do |f| %>
  <%= f.search_field :address_cont, placeholder:"エリア名を入力", class: "form-control" %>
  <%= f.search_field :content_cont, placeholder:"キーワードを入力", class: "form-control mx-2" %>
  <%= f.submit '検索', class:"btn btn-primary" %>
<% end %>

<p class="my-2"><span class="h4"><%= @results.count %></span>件が見つかりました</p>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th>Address</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |room| %>
      <tr>
        <td><%= image_tag room.image, size: '100x100' %></td>
        <td><%= link_to "#{room.name}", room %></td>
        <td><%= room.content %></td>
        <td><%= room.price.to_s(:delimited) %></td>
        <td><%= room.address %></td>
        <td><%= l room.created_at, format: :short %></td>
      </tr>
    <% end %>
  </tbody>
</table>
