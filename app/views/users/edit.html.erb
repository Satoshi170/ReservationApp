<h1>users/profile/edit</h1>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %>
  </div>
  <div class="actions">
    <%= f.submit '更新する' %>
  </div>
<% end %>
