<%= form_with model: @user, url: user_registration_path, local: true, class:"w-25 mx-auto mt-5" do |f| %>
  <div class="field my-1">
    <%= f.label :image, class: "form-label" %><br>
    <%= f.file_field :image, autofocus: true, autocomplete: "image", class: "form-control", type: "file" %>
  </div>
  <div class="field my-1">
    <%= f.label :name, class: "form-label" %><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>
  <div class="field my-1">
    <%= f.label :profile, class: "form-label" %><br>
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control", size: "20x5" %>
  </div>
  <div class="actions text-center my-3">
    <%= f.submit '更新する', class:"btn btn-primary" %>
  </div>
<% end %>
<div class="text-center">
  <%= link_to "戻る", "/users/profile" %>
</div>
