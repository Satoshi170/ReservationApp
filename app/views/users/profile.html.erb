<h2 class="my-3">設定</h2>
<div class="row">
  <div class="col-auto card mt-5 h-100" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item py-3">
        <%= link_to "アカウント", "/users/account", class:"text-decoration-none" %>
      </li>
      <li class="list-group-item py-3">
        <%= link_to "プロフィール", "/users/profile", class:"text-decoration-none" %>
      </li>
    </ul>
  </div>
  <div class="col mx-2">
    <div class="d-flex justify-content-between mb-3 border-bottom">
      <h3>プロフィール</h3>
      <%= link_to "編集", "/users/profile/edit", class:"text-decoration-none" %>
    </div>
    <div class="d-flex">
      <h5 class="w-25">アイコン画像</h5>
      <%= image_tag @user.image, size:"100x100" %>
    </div>
    <div class="d-flex my-3">
      <h5 class="w-25">名前</h5>
      <%= @user.name %>
    </div>
    <div class="d-flex">
      <h5 class="w-25">自己紹介</h5>
      <%= @user.profile %>
    </div>
  </div>
</div>
