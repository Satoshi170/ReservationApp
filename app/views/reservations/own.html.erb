<h2 class="my-3">予約済み一覧</h2>

<div class="table-responsive">
  <table class="table align-middle text-break">
    <thead>
      <tr>
        <th scope="col">画像</th>
        <th scope="col">施設名</th>
        <th scope="col" class="w-25">紹介文</th>
        <th scope="col">合計料金</th>
        <th scope="col">チェックイン</th>
        <th scope="col">チェックアウト</th>
        <th scope="col">予約確定日時</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= image_tag reservation.room.image, size: '100x100' %></td>
          <td><%= reservation.room.name %></td>
          <td><%= reservation.room.content %></td>
          <td>¥<%= (reservation.count_people*reservation.room.price).to_s(:delimited) %></td>
          <td><%= l reservation.checkin_date %></td>
          <td><%= l reservation.checkout_date %></td>
          <td><%=  l reservation.updated_at %></td>
          <td><%= link_to '再予約', edit_reservation_path(reservation), class: "text-decoration-none" %></td>
          <td><%= link_to '取り消し', reservation, class: "text-decoration-none", method: :delete, data: { confirm: '本当に取り消しますか?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
